worker_processes 4;
pid /var/log/nginx/nginx.pid;

events {
  worker_connections 768;
}

http {

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  keepalive_timeout 65;
  types_hash_max_size 2048;
  client_max_body_size 2m;

  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  access_log /var/log/nginx/access.log;
  error_log /var/log/nginx/error.log;

  #include /etc/nginx/naxsi_core.rules;

  gzip on;
  gzip_http_version 1.0;
  gzip_disable "msie6";
  gzip_min_length 512;
  gzip_proxied expired no-cache no-store private auth;
  gzip_types application/xml application/x-javascript application/javascript text/css image/svg+xml;

  include /etc/nginx/conf.d/*.conf;
  #include /etc/nginx/sites-enabled/*;

  upstream api {
    server 127.0.0.1:9000;
  }

  server {
    listen 443 ssl http2;
    include /etc/nginx/mime.types;
    server_name plotdb.com;
    ssl on;
    ssl_certificate /home/tkirby/.crt/bundle.crt;
    ssl_certificate_key /home/tkirby/.crt/ca.key;
    error_page 405 = $uri;
    root /home/tkirby/workspace/production/server;
    client_max_body_size 2m;

    location ~ \.(?:ico|css|js|gif|jpe?g|png|svg|woff)$ {
      root /home/tkirby/workspace/production/server/static/;
      expires 30d;
      add_header Pragma public;
      add_header Cache-Control public;
    }

    location ~ ^/(.*)$ {
      root /home/tkirby/workspace/production/server/static/;
      try_files $uri @nodeserver;
    }

    location @nodeserver {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;
      proxy_pass http://api;
      proxy_redirect off;
    }
  }

  server {
    listen 443 ssl http2;
    include /etc/nginx/mime.types;
    server_name plotdb.io
    ssl on;
    ssl_certificate /home/tkirby/.crt/bundle.crt;
    ssl_certificate_key /home/tkirby/.crt/ca.key;
    error_page 405 = $uri;
    client_max_body_size 2m;

    location ~ \.(?:ico|gif|jpe?g|png|svg|woff)$ {
      root /home/tkirby/workspace/production/server/static/;
      expires 30d;
      add_header Pragma public;
      add_header Cache-Control public;
    }

    location ~ ^/(.*)$ {
      root /home/tkirby/workspace/production/server/static/;
      try_files $uri @nodeserver;
    }

    location @nodeserver {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;
      proxy_pass http://api;
      proxy_redirect off;
    }
  }
  server {
    listen      80;
    server_name plotdb.com;
    rewrite     ^   https://$server_name$request_uri? permanent;
  }
  server {
    listen      80;
    server_name plotdb.io;
    rewrite     ^   https://$server_name$request_uri? permanent;
  }
}

